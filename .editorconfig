# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,ts,html,css,scss,sass}]
indent_size = 2
indent_style = tab

[*.{py,sql}]
indent_size = 4
indent_style = space

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[*{Dockerfile,.yaml,yml}]
indent_size = 2
indent_style = tab
